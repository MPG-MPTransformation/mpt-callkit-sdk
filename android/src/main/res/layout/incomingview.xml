<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_default">

    <RelativeLayout
        android:visibility="visible"
        android:id="@+id/llWaitingView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/my_gradient">

        <LinearLayout
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="235dp"
                android:layout_height="235dp">
                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_height="235dp"
                    android:layout_width="235dp"
                    android:background="@drawable/ic_border_avatar"/>
                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_height="120dp"
                    android:layout_width="120dp"
                    android:background="@drawable/ic_example_portal"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="25sp"
                android:textColor="@android:color/white"
                android:text="Dược sỹ Long Châu"/>

            <TextView
                android:id="@+id/sessiontips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đang gọi tới bạn..."
                android:layout_marginBottom="20dp"/>

        </LinearLayout>

        <ImageView
            android:layout_alignParentBottom="true"
            android:layout_height="200dp"
            android:layout_width="match_parent"
            android:background="@drawable/ic_longchau"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:layout_marginBottom="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/ibscale"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:scaleType="fitXY"
                        android:padding="8dp"
                        android:tint="@color/text_default"
                        android:background="@drawable/round_button_white"
                        android:src="@drawable/fullscreen_off"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/hangup_call"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:scaleType="centerInside"
                            android:padding="20dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/round_button"
                            android:src="@drawable/close"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:textSize="18sp"
                            android:textColor="@android:color/white"
                            android:text="Từ chối"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/answer_audio"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:scaleType="centerInside"
                            android:padding="20dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/round_button_green"
                            android:src="@drawable/tick"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:textSize="18sp"
                            android:textColor="@android:color/white"
                            android:text="Chấp nhận"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/answer_video"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:scaleType="centerInside"
                            android:padding="20dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/round_button_green"
                            android:src="@drawable/tick"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:textSize="18sp"
                            android:textColor="@android:color/white"
                            android:text="Chấp nhận 2"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_gravity="top"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent">

            <ImageButton
                android:id="@+id/ibback2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                android:layout_marginStart="20dp"
                android:padding="10dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/round_button_black"
                android:src="@drawable/back"/>

        </RelativeLayout>

    </RelativeLayout>
</FrameLayout>
